<% flash.each do |key, value| %>
  <p style="color: green"><%= value %></p>
<% end %>

<h1>playlist</h1>

<div id="playlists">
  <% @playlists.each do |playlist| %>
    <%= render playlist %>
    <p>
      <%= link_to "Show this playlist", playlist %>
    </p>
  <% end %>
</div>

<%= link_to "New playlist", new_playlist_path %>
